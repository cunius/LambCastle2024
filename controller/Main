package com.lambcastle.lambcastle.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
// Spring framework에서 제공하는 Controller, GetMapping을 사용하기 위해 필요한 라이브러리 import

@Controller // 이 Class가 Spring MVC의 컨트롤러임, http 요청 처리

public class MainController {
    @GetMapping(value = "/") // '/' 경로로 들어오는 GET 요청 처리
    public String main() {
        return "main"; // main 이라는 이름의 뷰 반환
    }
}
