package com.lambcastle.lambcastle.dto;

import jakarta.validation.constraints.Email;
import jakarta.validation.constraints.NotEmpty;
import lombok.Getter;
import lombok.Setter;
import org.hibernate.validator.constraints.Length;

@Getter
@Setter

public class MemberFormDto {
    @NotEmpty(message = "Please fill your name.")
    private String name;

    @NotEmpty(message = "Please fill your e-mail.")
    @Email(message = "Please fill in e-mail format.")
    private String email;

    @NotEmpty(message = "Create a new password.")
    @Length(min=8, max=32, message="Create your password min 8-32.")
    private String password;

    @NotEmpty(message = "Please fill your address.")
    private String address;
}
